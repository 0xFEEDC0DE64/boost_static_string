local SOURCES =
    fixed_string.cpp
    ;

local RUN_TESTS ;

for local f in $(SOURCES)
{
    RUN_TESTS += [ run $(f) lib.cpp ] ;
}

alias run-tests : $(RUN_TESTS) ;

exe fat-tests :
    $(SOURCES)
    lib.cpp
    ;

explicit fat-tests ;

run $(SOURCES)
    lib.cpp
    : : : : run-fat-tests ;

explicit run-fat-tests ;
